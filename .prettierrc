{
	"singleQuote": true,
	"trailingComma": "es5",
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"quoteProps": "as-needed",
	"arrowParens": "always",
	"bracketSpacing": true,
	"bracketSameLine": true,
	"printWidth": 160,
	"overrides": [
		{
			"files": "*.json",
			"options": {
				"printWidth": 200
			}
		}
	],
	"embeddedLanguageFormatting": "auto",
	"htmlWhitespaceSensitivity": "css",
	"proseWrap": "preserve",
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^@angular/core/(.*)$",
		"^@angular/(.*)$",
		"^@core/(.*)$",
		"^@shared/(.*)$",
		"^@server/(.*)$",
		"^@app/(.*)$",
		"^@env/(.*)$",
		"^[./]"
	],
	"importOrderParserPlugins": [
		"typescript",
		"classProperties",
		"decorators-legacy"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
